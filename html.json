  "HTML If": {
    "prefix": "hif",
    "body": ["<?php if (${1}): ?>", "${0}", "<?php endif ?>"],
    "description": "HTML If"
  },
  "HTML If Else": {
    "prefix": "hifelse",
    "body": [
      "<?php if (${1}): ?>",
      "${2}",
      "<?php else: ?>",
      "${0}",
      "<?php endif ?>"
    ],
    "description": "HTML If Else"
  },
  "HTML Foreach": {
    "prefix": "hforeach",
