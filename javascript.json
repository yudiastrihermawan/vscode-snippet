{
  "javascript datatables": {
    "prefix": "js_datatables",
    "body": [
      "var table = $('#${0}');",
      "table.DataTable({",
      "ajax: {",
      "url: table.data('url'),",
      "type: 'POST'",
      "},",
      "// sesuaikan data",
      "columns: [{",
      "data: 'id'",
      "},",
      "{",
      "data: 'name'",
      "},",
      "{",
      "render: function(data, type, row) {",
      "var html = '<a href=\"javacript:void()\" class=\"btn btn-primary\" onclick=\"sunting(' + row.id + ')\"><i class=\"fa-solid fa-pen\"></i></a> ';",
      "html += '<a href=\"javacript:void()\" class=\"btn btn-danger\" onclick=\"delete(' + row.id + ')\"><i class=\"fa-solid fa-trash\"></i></a>';",
      "return html;",
      "},",
      "className: 'dt-center'",
      "}",
      "],",
      "order: [",
      "[0, 'asc']",
      "],",
      "columnDefs: [{",
      "targets: [0],",
      "visible: false,",
      "},",
      "{",
      "targets: [-1],",
      "'orderable': false,",
      "}",
      "],",
      "language: {",
      "url: 'https://cdn.datatables.net/plug-ins/2.1.3/i18n/id.json',",
      "paginate: {",
      "first: '<i class=\"fa-solid fa-angles-left\"></i>',",
      "last: '<i class=\"fa-solid fa-angles-right\"></i>',",
      "next: '<i class=\"fa-solid fa-angle-right\"></i>',",
      "previous: '<i class=\"fa-solid fa-angle-left\"></i>',",
      "},",
      "},",
      "processing: true,",
      "serverSide: true,",
      "// ordering: false,",
      "info: false,",
      "});"
    ],
    "description": "javascript datatables"
  }
}
